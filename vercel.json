// FILE: vercel.json
{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "booking-system",
  
  // 1. ADDED: Define the custom static build process
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static-build",
      "config": {
        "installCommand": "npm install",
        "buildCommand": "npm run tw:build"
      }
    }
  ],
  
  // 2. ADDED: Explicitly configure static routes for generated files
  "routes": [
    // Route for the compiled CSS file inside the 'dist' folder
    {
      "src": "/dist/(.*)",
      "dest": "/dist/$1",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    // Route for the root file (index.html)
    {
      "src": "/",
      "dest": "/index.html"
    },
    // Route for the admin file
    {
      "src": "/admin",
      "destination": "/admin.html"
    }
  ],

  "outputDirectory": ".",
  
  // Existing headers configuration (reordered for clarity, logic is the same)
  "headers": [
    // Security Headers for all paths
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "geolocation=(), microphone=(), camera=()" }
      ]
    },
    // Cache control for API
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store, max-age=0" }
      ]
    }
    // NOTE: Removed the redundant /:path* cache header since it's now covered by the custom route above.
  ],
  
  "rewrites": [
    {
      "source": "/admin",
      "destination": "/admin.html"
    }
  ],
  
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
